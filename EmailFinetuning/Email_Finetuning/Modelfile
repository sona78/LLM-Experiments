FROM ./model-fp16.gguf

# Set the temperature for generation (lower = more focused, higher = more creative)
PARAMETER temperature 1.5

# Set the context window size
PARAMETER num_ctx 1024

# Set top-p sampling
PARAMETER top_p 0.9

# Set top-k sampling
PARAMETER top_k 40

# System prompt for email-related tasks
TEMPLATE """{{ if .System }}<|system|>
{{ .System }}<|end|>
{{ end }}{{ if .Prompt }}<|user|>
{{ .Prompt }}<|end|>
{{ end }}<|assistant|>
{{ .Response }}<|end|>
"""

# System message
SYSTEM """You are a helpful AI assistant trained on email data. You can help with email composition, understanding, and analysis."""
